@import "_lib";

html
body
	-ms-text-size-adjust 100%; -webkit-text-size-adjust 100%;
	size 100%; overflow hidden; position fixed; // <- chrome scroll bug

body
	margin 0; font 400 15px/1 arial, sans-serif; cursor default; bg #333;

*
	box-sizing border-box;

h1, h2, h3, h4, h5
	font-family arial, sans-serif; font-weight 400; margin 0; padding 0;
h2
	margin 0 0 20; font-weight 100; font-size 30px;

label
button
input
select
	font inherit; height 27; vertical-align top;

select
input
	border #d9d9d9; padding 0 5; bg #f5f5f5; transition all .3s ease-out;

button
	cursor default; padding 0 15; bg #d9d9d9; color #222; outline none; font 14/1;
	border 1px solid transparent;


#grid1
	pos 0; bottom 0; left 0; width 50%;

	.grid-body
	.grid-footer
		.amount
			text-align right;

#grid2
	pos 0 0 0; width 50%;

	.grid-body
	.grid-footer
		.amount
			text-align right;

