@import "_lib";

header-height = 30px;
footer-height = 24px;
cell-vpad = 8px;
cell-hpad = 5px;

.grid
	pos 0 0 0 0; cursor default; min-height 240px; font 13; not-selectable();
	*
		box-sizing border-box;

.grid-table
	width 100%; border-collapse collapse; table-layout fixed;

	.row-action
		width 20; font 14/1; padding 3 4; text-align center; u 0; show 1;
		.fa
			transition color .3s ease-out;

	.filter-box
		pos 0; left -3; width 0; z 99; overflow hidden; opacity 0; transition .2s ease-out;

	.filter-input
		width 100%; bg rgba(#fff, 0.95); color #444; padding 3 5 3 25; font 14/1; b 0; border none;
	.filter-visible
		.filter-box
			width 400; opacity 1;
		.row-action
			position relative; z 100;

.grid-scroller
	pos header-height 0 footer-height 0; overflow hidden; overflow-y auto;

.grid-cell
.grid-row .grid-cell
	white-space nowrap; overflow hidden; text-overflow ellipsis; padding 0 cell-hpad;

	.row-action, a
		u 1;
		&:hover
			u 0;

.grid-footer-table
.grid-body-table
	.grid-cell:last-of-type
		padding-right 30;

.grid-row
	.grid-cell
		padding-top cell-vpad; padding-bottom cell-vpad; transition background-color .1s;

		&:last-child
			border none;

	&:first-child
		border none;

	&.grid-row:first-child .grid-cell
		border-top none;

	.grid-no-items
		padding 20% 0 0 0; border-width 0 0 1px; text-align center

	.action
		padding 0; text-align center;



.grid-header-table
	position relative; z 10;

	.grid-cell
		height header-height; b 1;

		&.action
			padding 0 3;
			&, .grid-header-cell-inner
				overflow visible;

		.fa-sort
		.fa-sort-asc
		.fa-sort-desc
			float right; margin 9 6 0 0; font 12; transition color .3s ease-out;

		.fa-sort-asc
			margin-top 11;

		.fa-sort-desc
			margin-top 7;


	.grid-header-cell-inner
		show 2; overflow hidden; text-overflow ellipsis; white-space nowrap; line-height header-height;
		position relative;

	.sort-asc
	.sort-desc
		.grid-header-cell-inner
			margin-right 10

.grid-footer-table
	pos auto 0 0 0;
	.grid-cell
		height footer-height; b 1; white-space nowrap; overflow hidden; text-overflow ellipsis;


.grid-header-scroll-over
	shadow 0 4 3 -1 #000 .3, 0 1 0 #ddd;






/*** DARK THEME ***********************************************************************************/
// transparent-on-dark theme

dark-text-color = #fff;
dark-inverted-text-color = #444;
dark-grid-border-color = none;
dark-grid-inner-border-color = #999;
dark-cell-border-color = none;
dark-header-bg = transparent;
dark-row-bg = transparent;
dark-row-alt-bg = transparent;
dark-row-hover-bg = rgba(#fff, 0.2);
dark-row-selected-bg = rgba(#fff, 0.3);

.grid-dark
	border dark-grid-border-color;

	.grid-table
		color dark-text-color;

	.grid-scroller
		background-color dark-row-bg;
		border-top dark-grid-inner-border-color;
		border-bottom dark-grid-inner-border-color;

	.grid-cell
	.grid-row .grid-cell
		.row-action, a
			color dark-text-color;

	.grid-row
		.grid-cell
			background-color dark-row-bg; border-right dark-cell-border-color;

		&:nth-child(odd) .grid-cell
			background-color dark-row-alt-bg;

		&.selected .grid-cell
			background-color dark-row-selected-bg;

		&:hover .grid-cell
			background-color dark-row-hover-bg;

		.grid-no-items
			color rgba(dark-text-color, .4);
			&:hover
				background-color dark-row-bg;

	.row-action
		.fa
			color rgba(dark-text-color, 0.2);
		&:hover .fa
			color rgba(dark-text-color, 0.5);
		&:active .fa
			color rgba(dark-text-color, 0.1);


	.filter-visible .row-action .fa
		color rgba(dark-inverted-text-color, 0.5);
		&:hover
			color dark-inverted-text-color;
		&:active
			color rgba(dark-inverted-text-color, 0.3);
	.grid-header-table
		.grid-cell
			background-color dark-header-bg

			.fa-sort
			.fa-sort-asc
			.fa-sort-desc
				color rgba(dark-text-color, 0.2);

			&:hover .fa-sort
				color rgba(dark-text-color, 0.5);

			&:hover, &
				.fa-sort-asc
				.fa-sort-desc
					color dark-text-color;

	.grid-footer-table .grid-cell
		background-color dark-header-bg;
/*** DARK THEME ***********************************************************************************/






