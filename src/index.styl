@import "_lib";

header-height = 30px;
footer-height = 24px;

text-color = #333;
border-color = #B3B3B4;
border-color-inner = #ddd;

header-bg = #DAE1ED;
row-bg = #fff;
row-alt-bg = #FAFCFD;
row-hover-bg = #E4EBF7;

.grid
	pos 0 0 0 0; cursor default; min-height 240px; font 13; border border-color; margin-right 10;
	not-selectable();
	*
		box-sizing border-box;

.grid-table
	width 100%; color text-color; border-collapse collapse; table-layout fixed;

.grid-scroller
	pos header-height 0 footer-height 0; overflow hidden; overflow-y auto; bg row-bg;
	border-top border-color; border-bottom border-color;

.grid-cell
.grid-row .grid-cell
	padding 0 5; white-space nowrap; overflow hidden; text-overflow ellipsis;

	.row-action, a
		color text-color; u 1;
		&:hover
			u 0;

.grid-footer-table
.grid-body-table
	.grid-cell:last-of-type
		padding-right 24;

.grid-row
	.grid-cell
		bg row-bg; padding 5; transition background-color .1s;
		border-right border-color-inner

		&:last-child
			border none;

	&:first-child
		border none;

	&:nth-child(odd) .grid-cell
		background-color row-alt-bg;

	&.selected .grid-cell
		bg header-bg;

	&:hover .grid-cell
		bg row-hover-bg;

	&.grid-row:first-child .grid-cell
		border-top none;

	.grid-no-items
		color #999; padding-left 20; border-width 0 0 1px;
		&:hover
			bg row-bg;

	.action
		padding-left 0; padding-right 0; text-align center;
		.row-action
			size 21; font 14; padding 3 4 0; text-align center; u 0; show 1; margin



.grid-header-table
	position relative; z 10;

	.grid-cell
		height header-height; bg header-bg; b 1;
		.fa-sort
		.fa-sort-asc
		.fa-sort-desc
			float right; margin 9 6 0 0; color rgba(#000, 0.1); font 12; transition color .3s ease-out;

		&:hover .fa-sort
			color rgba(#000, 0.2);

		&:hover, &
			.fa-sort-asc
			.fa-sort-desc
				color #444;

		.fa-sort-asc
			margin-top 11;

		.fa-sort-desc
			margin-top 7;


	.grid-header-cell-inner
		display block; overflow hidden; text-overflow ellipsis; white-space nowrap;
		line-height header-height;

	.sort-asc, .sort-desc
		.grid-header-cell-inner
			margin-right 10

.grid-footer-table
	pos auto 0 0 0;
	.grid-cell
		height footer-height; background-color header-bg;
		b 1; white-space nowrap; overflow hidden; text-overflow ellipsis;


.grid-header-scroll-over
	shadow 0 4 3 -1 #000 .3, 0 1 0 #ddd;

